{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@controllers/*": [
        "src/infra/http/controllers/*"
      ],
      "@database/*": [
        "./src/infra/typeorm/database/*"
      ],
      "@models/*": [
        "./src/infra/typeorm/models/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@repositories/*": [
        "./src/infra/typeorm/repositories/*"
      ],
      "@middlewares/*": [
        "./src/infra/http/middlewares/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@dtos/*": [
        "./src/dtos/*"
      ],
      "@logger*": [
        "./src/logs"
      ],
      "@ormConfig*": [
        "./src/infra/typeorm"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}